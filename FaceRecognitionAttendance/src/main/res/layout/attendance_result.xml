<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:text="Capture Result"
        android:textAllCaps="false"
        android:textSize="60dp" />

    <ImageView
        android:id="@+id/PreviewResult"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="87dp" />

    <Button
        android:id="@+id/button10"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_alignTop="@+id/PreviewResult"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp"
        android:layout_toEndOf="@+id/PreviewResult"
        android:layout_toRightOf="@+id/PreviewResult"
        android:text="Check In"
        android:onClick="CheckIn"
        android:textAllCaps="false"
        android:textSize="40dp" />

    <Button
        android:id="@+id/button11"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_alignBottom="@+id/PreviewResult"
        android:layout_alignLeft="@+id/button10"
        android:layout_alignStart="@+id/button10"
        android:text="Check Out"
        android:onClick="CheckOut"
        android:textAllCaps="false"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="600dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:textSize="30dp"/>

</RelativeLayout>