<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="119dp"
        android:text="Administrator Login"
        android:textAllCaps="true"
        android:textSize="50dp"/>

    <EditText
        android:id="@+id/AUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="91dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#8e8e8e"/>

    <EditText
        android:id="@+id/APassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/AUsername"
        android:layout_below="@+id/AUsername"
        android:layout_marginTop="59dp"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/APassword"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="24dp"
        android:layout_toStartOf="@+id/AUsername"
        android:text="User Name:"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView11"
        android:layout_alignTop="@+id/APassword"
        android:layout_marginTop="11dp"
        android:text="Password:"
        android:textSize="20dp" />

    <Button
        android:id="@+id/adminLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/APassword"
        android:layout_centerHorizontal="true"
        android:onClick="Adminlogin"
        android:layout_marginTop="63dp"
        android:text="Login" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="First time login the user name and password both are 'admin', Please change after login."
        android:textSize="20dp"/>


</RelativeLayout>