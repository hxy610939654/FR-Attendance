<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="119dp"
        android:text="Attendance Time range"
        android:textAllCaps="true"
        android:textSize="50dp"/>

    <Spinner
        android:id="@+id/Time"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:text="Check In time:"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:layout_alignTop="@+id/Time"
        android:layout_toStartOf="@+id/Time" />

    <Button
        android:id="@+id/button24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="118dp"
        android:onClick="setTimeRange"
        android:text="Button" />

    <Spinner
        android:id="@+id/lateTime"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="69dp"
        android:layout_below="@+id/Time"
        android:layout_alignStart="@+id/Time" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Late chack in time:"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:layout_alignTop="@+id/lateTime"
        android:layout_alignEnd="@+id/textView23" />

    <TextView
        android:id="@+id/TVsetTime"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:textSize="30dp"
        android:layout_alignTop="@+id/Time"
        android:layout_marginStart="82dp"
        android:layout_toEndOf="@+id/Time"/>

</RelativeLayout>