<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="119dp"
        android:text="Management"
        android:textAllCaps="true"
        android:textSize="50dp"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_marginTop="56dp"
        android:text="Attendance Report"
        android:onClick="AttendanceReport"
        android:textSize="25dp"
        android:textAllCaps="false"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/button14" />

    <Button
        android:id="@+id/button5"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_marginTop="26dp"
        android:text="Add New Employee"
        android:onClick="AddEmployee"
        android:textSize="25dp"
        android:textAllCaps="false"
        android:layout_below="@+id/button4"
        android:layout_alignStart="@+id/button4" />

    <Button
        android:id="@+id/button14"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_marginTop="34dp"
        android:text="Update And Delete Employee"
        android:textSize="25dp"
        android:onClick="UpdateAndDelete"
        android:textAllCaps="false"
        android:layout_marginEnd="126dp"
        android:layout_below="@+id/button5"
        android:layout_toStartOf="@+id/button16" />

    <Button
        android:id="@+id/button16"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:text="Change Manager Password"
        android:onClick="ChangePassword"
        android:textSize="20dp"
        android:layout_alignTop="@+id/button4"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="263dp" />

    <Button
        android:id="@+id/button23"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:text="Set attendance time range"
        android:onClick="setTimeRange"
        android:textSize="20dp"
        android:layout_alignTop="@+id/button5"
        android:layout_alignStart="@+id/button16" />


</RelativeLayout>