<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="119dp"
        android:text="Employee Home page"
        android:textAllCaps="true"
        android:textSize="50dp"/>

    <Button
        android:id="@+id/button25"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:onClick="CheckAttendance"
        android:text="Attendance self checking"
        android:textAllCaps="false"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/button26"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_marginTop="70dp"
        android:text="Password changing"
        android:onClick="EChangePassword"
        android:textAllCaps="false"
        android:textSize="25dp"
        android:layout_below="@+id/button25"
        android:layout_alignStart="@+id/button25" />


</RelativeLayout>