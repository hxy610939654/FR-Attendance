<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="119dp"
        android:text="Manager password change"
        android:textAllCaps="true"
        android:textSize="50dp"/>

    <EditText
        android:id="@+id/MoPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@+id/editText15"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/MnPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/MoPassword"
        android:layout_below="@+id/MoPassword"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/MrnPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/MnPassword"
        android:layout_below="@+id/MnPassword"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="textPersonName"/>

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/MoPassword"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="11dp"
        android:layout_toStartOf="@+id/MoPassword"
        android:text="Old password:" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView19"
        android:layout_alignTop="@+id/MnPassword"
        android:layout_marginTop="11dp"
        android:text="New Password:" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView21"
        android:layout_alignTop="@+id/MrnPassword"
        android:layout_marginTop="12dp"
        android:text="New Password Confirm:" />

    <Button
        android:id="@+id/button22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MrnPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:onClick="MchangePassword"
        android:text="Confirm" />

    <TextView
        android:id="@+id/editText15"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/MoPassword"
        android:layout_below="@+id/textView"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView19"
        android:layout_alignTop="@+id/editText15"
        android:layout_marginTop="11dp"
        android:text="UserName Confirm:" />

</RelativeLayout>